<?xml version="1.0" encoding="utf-8"?>
<!-- steps to add to build additions -->
<root xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- init section is always evaluated once per architecture -->
	<init>
	    <setBool result="bSupported" value="false"/>
	        <isArch arch="armeabi-v7a">
	            <setBool result="bSupported" value="true"/>
	        </isArch>
			<isArch arch="arm64-v8a">
	            <setBool result="bSupported" value="true"/>
	        </isArch>
			<isArch arch="x86">
	            <setBool result="bSupported" value="true"/>
	        </isArch>
			<isArch arch="x86_64">
	            <setBool result="bSupported" value="true"/>
	        </isArch>
	</init>

	<!-- optional files or directories to copy to Intermediate/Android/APK -->
	<resourceCopies>
		<log text="PluginDir: $S(PluginDir)"/>
	        <copyFile src="$S(PluginDir)/$S(Architecture)/libcrypto_1_0_0.so"
	                  dst="$S(BuildDir)/libs/$S(Architecture)/libcrypto_1_0_0.so" />
	    <!--
			<copyFile src="$S(PluginDir)/$S(Architecture)/libagora-crypto.so"
	                  dst="$S(BuildDir)/libs/$S(Architecture)/libagora-crypto.so" /> -->
	        <copyFile src="$S(PluginDir)/$S(Architecture)/libagora-rtc-sdk.so"
	                  dst="$S(BuildDir)/libs/$S(Architecture)/libagora-rtc-sdk.so" />
	        <copyFile src="$S(PluginDir)/$S(Architecture)/libagora-fdkaac.so"
	                  dst="$S(BuildDir)/libs/$S(Architecture)/libagora-fdkaac.so" />
	        <copyFile src="$S(PluginDir)/$S(Architecture)/libagora-ffmpeg.so"
	                  dst="$S(BuildDir)/libs/$S(Architecture)/libagora-ffmpeg.so" />
	        <copyFile src="$S(PluginDir)/$S(Architecture)/libagora-mpg123.so"
	                  dst="$S(BuildDir)/libs/$S(Architecture)/libagora-mpg123.so" />
	        <copyFile src="$S(PluginDir)/$S(Architecture)/libagora-soundtouch.so"
	                  dst="$S(BuildDir)/libs/$S(Architecture)/libagora-soundtouch.so" />
			<copyFile src="$S(PluginDir)/agora-rtc-sdk.jar"
					dst="$S(BuildDir)/libs/agora-rtc-sdk.jar" />
	</resourceCopies>

	<androidManifestUpdates>
        <addPermission android:name="android.permission.INTERNET"/>
        <addPermission android:name="android.permission.RECORD_AUDIO"/>
		<addPermission android:name="android.permission.CAMERA"/>
		<addPermission android:name="android.permission.READ_PHONE_STATE"/>
		<addPermission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
		<addPermission android:name="android.permission.ACCESS_NETWORK_STATE"/>
		<addPermission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
		<addPermission android:name="android.permission.BLUETOOTH"/>
  	</androidManifestUpdates>

	<!-- optional libraries to load in GameActivity.java before libUE4.so -->
	<soLoadLibrary>
	    <if condition="bSupported">
	        <true>
				<!--<loadLibrary name="agora-crypto" failmsg="Failed to load agora-crypto library" /> -->
				<loadLibrary name="crypto_1_0_0" failmsg="Failed to load crypto_1_0_0 library" />
				<loadLibrary name="agora-rtc-sdk" failmsg="Failed to load agora-rtc-sdk library" />
			</true>
	    </if>
	</soLoadLibrary>
</root>